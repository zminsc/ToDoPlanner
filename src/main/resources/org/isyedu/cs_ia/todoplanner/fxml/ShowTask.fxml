<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" stylesheets="@../style/ShowTask.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isyedu.cs_ia.todoplanner.controller.ShowTaskController">
   <children>
      <VBox prefHeight="300.0" prefWidth="300.0">
         <children>
            <Pane prefHeight="10.0" prefWidth="300.0" />
            <Pane prefHeight="40.0" prefWidth="300.0">
               <children>
                  <Label layoutX="15.0" layoutY="11.5" text="Name" />
                  <TextField fx:id="nameField" layoutX="91.0" layoutY="7.0" prefHeight="26.0" prefWidth="195.0" />
               </children>
            </Pane>
            <Pane prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Label layoutX="15.0" layoutY="11.5" text="Date" />
                  <DatePicker fx:id="dateField" layoutX="91.0" layoutY="7.0" prefHeight="26.0" prefWidth="195.0" />
               </children>
            </Pane>
            <Pane prefHeight="160.0" prefWidth="200.0">
               <children>
                  <Label layoutX="15.0" layoutY="11.5" text="Description" />
                  <TextArea fx:id="descriptionField" layoutX="91.0" layoutY="7.0" prefHeight="146.0" prefWidth="195.0" />
               </children>
            </Pane>
            <Pane prefHeight="40.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btnSave" layoutX="226.0" layoutY="7.0" mnemonicParsing="false" onAction="#save" prefWidth="60.0" text="Save" textFill="#00a80b" />
                  <Button fx:id="btnDelete" layoutX="150.0" layoutY="7.0" mnemonicParsing="false" onAction="#delete" prefWidth="60.0" text="Delete" textFill="#d30202" />
                  <CheckBox fx:id="completeBox" layoutX="15.0" layoutY="11.25" mnemonicParsing="false" text="Complete" />
               </children>
            </Pane>
            <Pane prefHeight="10.0" prefWidth="300.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
